@model IEnumerable<EmployeeReadVM>

<div class="d-flex justify-content-center">
    <h2 class="text-success">Employees Portal</h2>
</div>

<br />
<hr />
<br />

<div class="d-flex justify-content-center gap-3 mb-3">
    <a asp-action="Create" asp-controller="Employee" class="btn btn-success">
        Create New Employee
    </a>
</div>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Department</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@employee.Id</th>
                <th scope="row">@employee.Name</th>
                <th scope="row">@employee.Age</th>
                <th scope="row">@employee.Salary</th>
                <th scope="row">@employee.Department</th>
                <th scope="row">
                    <img src="~/Images/employees/@employee.ImageURL" class="img-thumbnail" style="width: 100px; height: 100px;" />
                </th>
                <th scope="row">
                    <a asp-action="Details" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-outline-danger">Delete</a>
                    <button type="button" class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-employeeid="@employee.Id"
                            data-employeename="@employee.Name">
                        Delete
                    </button>
                </th>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Employee</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="employeeName"></strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-danger" id="deleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Get the Model Element
        const deleteModal = document.getElementById('deleteModal');

        // Add Event Listener to the Modal
        // Built in Event
        deleteModal.addEventListener('show.bs.modal', event => {
            // Button that triggered the modal
            const button = event.relatedTarget

            // Extract info from data-* attributes
            const employeeId = button.getAttribute('data-employeeid');
            const employeeName = button.getAttribute('data-employeename');

            // Update Modal Content
            deleteModal.querySelector('#employeeName').textContent = employeeName;

            // Update Delete Button Action
            const deleteBtn = deleteModal.querySelector('#deleteBtn');
            deleteBtn.onclick= ()=> {
                  window.location.href = `/Employee/Delete/${employeeId}`;
            };
        });
    </script>
}



@section MenuSection {
    <div class="d-flex justify-content-center gap-3 mb-3 text-bg-primary">
        Menu Section
    </div>
}