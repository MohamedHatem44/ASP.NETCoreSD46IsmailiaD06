@model EmployeeEditVM

<div class="d-flex justify-content-center">
    <h1 class="text-success">Edit Employee</h1>
</div>

<br />
<hr />
<br />

<form asp-action="Edit" asp-controller="Employee" method="post">
    @* asp-route-id ="@Model.Id" *@

    <div class="mb-3 form-group">
        <label asp-for="Id" class="form-label">Id</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="mb-3 form-group">
        <label asp-for="DepartmentId" class="form-label"></label>
        <select asp-for="DepartmentId" class="form-select" asp-items="Model.Departments" required>
        </select>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <input type="submit" class="btn btn-success" value="Save" />
        <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Cancel</a>
    </div>

</form>
