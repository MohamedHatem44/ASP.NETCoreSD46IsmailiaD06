@model DepartmentEditVM

<div class="d-flex justify-content-center">
    <h1 class="text-success">Edit Department</h1>
</div>

<br />
<hr />
<br />

<form asp-controller="Department" asp-action="Edit" method="post">

    <div class="mb-3 form-group">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <input type="submit" class="btn btn-success" value="Save" />

        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </div>

</form>
